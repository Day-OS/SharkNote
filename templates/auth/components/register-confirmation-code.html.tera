{% import "auth/macros" as macros %}
<div class="auth-box">
  <div class="content">
    <div class="alert alert-success" role="alert">
     {{messages.confirmation_code_info}}
    </div>
    {{macros::bubble(image="/static/blobhaj/Blobhaj_Headphones.svg", text="Check Your email!")}}
    <form 
      hx-target="#auth-box"
      hx-target-202="#auth-box"
      hx-target-*="#alert"
      hx-post="/auth/login/confirmation"
      hx-include="#recaptcha_token, #csrf_token"
      >
      <div class="form-floating">
        <input type="text" class="form-control" id="code" placeholder="" name="code" required>
        <label for="code">Code</label>
      </div>
      <button class="btn btn-primary w-100 py-2" type="submit">Confirm code</button>
    </form>
  </div>
</div>